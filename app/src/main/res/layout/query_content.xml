<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/blue_rect_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:background="@drawable/rectangle_button"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    >
                    <LinearLayout
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginBottom="10dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Start Date"
                            android:textAlignment="center"
                            android:textColor="#fb641b"
                            />

                        <Button
                            android:id="@+id/startDate"
                            style="@style/ButtonStyle"
                            android:text="2017-12-01"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:background="@drawable/rectangle_button"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="End Date"
                            android:textAlignment="center"
                            android:textColor="@color/success"
                            />

                        <Button
                            android:id="@+id/endDate"
                            style="@style/ButtonStyle"
                            android:text="2017-12-22"
                            android:textColor="#000000"
                            android:layout_width="match_parent"
                            android:background="@drawable/rectangle_button"
                            />

                    </LinearLayout>




                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <Button
                        android:id="@+id/lastMonth"
                        style="@style/ButtonStyle"
                        android:text=" Last Month "
                        android:layout_width="wrap_content"


                        />
                    <Button
                        android:id="@+id/last30Days"
                        style="@style/ButtonStyle"
                        android:text=" Last 30 Days "
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:visibility="gone"
                        />
                    <Button
                        android:id="@+id/today"
                        style="@style/ButtonStyle"
                        android:text=" Today "
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        />
                    <Button
                        android:id="@+id/thisMonth"
                        style="@style/ButtonStyle"
                        android:text="This Month"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"

                        />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@color/cardview_light_background"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click Type"
                    android:layout_margin="10dp"
                    android:textColor="#fb641b"
                    android:id="@+id/textView"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    />

                <Spinner
                    android:id="@+id/click_spinner"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:entries="@array/install_type"
                    android:prompt="@string/install_type_prompt"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_margin="10dp"
                    android:textColor="#fb641b"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    />

                <Spinner
                    android:id="@+id/status_spinner"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:entries="@array/install_status"
                    android:prompt="@string/install_status_prompt"

                    />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>